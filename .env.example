# EvvekoCRM Environment Variables

# Backend
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/evvekocrm_db
REDIS_URL=redis://localhost:6379/0
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Yevveko Integration
YEVVEKO_API_URL=https://evveko.com/api/v1
YEVVEKO_CRM_API_KEY=your-yevveko-crm-api-key

# SMS (NetGSM)
NETGSM_USERCODE=
NETGSM_PASSWORD=
NETGSM_MSGHEADER=EVVEKO

# File Storage
UPLOAD_DIR=./uploads
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Docker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=evvekocrm_db
